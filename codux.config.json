{
  "$schema": "https://wixplosives.github.io/codux-config-schema/codux.config.schema.json",
  "boardsPath": "_codux/boards",
  "styling": {
    "solution": "css modules"
  },
  "boardGlobalSetup": "./_codux/board-setup.ts",
  "componentsDiscovery": { "exclude": ["./_codux/templates/**"] },
  "resolve": {
    "alias": {
      "~": "app",
      "~/*": "app/*"
    }
  },
  "newComponent": {
    "componentsPath": "app/components",
    "templatesPath": "_codux/templates"
  }
}
